#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/elasticsearch/helpers/ctl_setup.sh 'elasticsearch'

export LANG=en_US.UTF-8

CONFIGFILE=/var/vcap/jobs/elasticsearch/config/elasticsearch.yml

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME
    if [[ ! -d /var/vcap/sys/logs/elasticsearch ]] ; then
      mkdir -p /var/vcap/sys/logs/elasticsearch
    fi
    chown vcap:vcap /var/vcap/sys/logs/elasticsearch
    
    sudo -u vcap -g vcap elasticsearch -d -p $PIDFILE
    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;
  *)
    echo "Usage: elasticsearch_ctl {start|stop}"
    ;;

esac
exit 0